@model SimpleBlog.Models.Comment

@{
    <div id="@Model.Id">
        <div class="text-right">
            @Model.CommentDate
        </div>
        <div>
            @Model.Content
        </div>
    </div>
    <hr />

}

<script>
    $(document).ajaxComplete(function () {
        $('html, body').animate({
            scrollTop: $("#@Model.Id").offset().top -50
        }, 1000, 'linear');

    });
</script>