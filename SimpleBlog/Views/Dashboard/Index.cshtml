@model List<SimpleBlog.Models.Article>
@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Articles</h2>


<button type="button" class="btn btn-success" style="float: right" data-toggle="modal" data-target="#myModal-AddArticle">
    Add
</button>
<br/>
<br/>
<div class="thumbnail">

<div class="caption">
<table class="table table-hover table-striped" id="ArticlesTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Published</th>
            <th>Date</th>
            <th>Publisher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {

            <tr id="id-@article.Id">

                <td>
                    @article.Id
                </td>
                <td>
                    @article.Title
                </td>
                <td>
                    @article.Category.Name
                </td>
                <td>
                    @article.IsPublished
                </td>
                <td>
                    @article.DatePublished
                </td>
                <td>
                    @article.PublisherId
                </td>

            </tr>
        }
    </tbody>
</table>
</div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#ArticlesTable").DataTable();
        });
    </script>
}