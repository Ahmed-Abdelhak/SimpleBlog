@model SimpleBlog.ViewModels.ArticleViewModel
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "../Shared/_Layout.cshtml";
}

<h2 class="marginedh2">Categories</h2>


<button type="button" class="btn btn-success" style="float: right" data-toggle="modal" data-target="#myModal-AddCategory">
    Add
</button>
<br />
<br />

@Html.Partial("CategoryTable")
@Html.Partial("AddCategory_Partial")

<hr/>

<h2 class="marginedh2">Articles</h2>
<button type="button" class="btn btn-success" style="float: right" data-toggle="modal" data-target="#myModal-AddArticle">
    Add
</button>
<br />
<br />

@Html.Partial("ArticleTable")
@Html.Partial("AddArticle_Partial")

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#ArticlesTable").DataTable();
            $("#CategoryTable").DataTable();
        });

    </script>
}